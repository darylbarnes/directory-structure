---
name: user_registration
resource: User
fields:
  first_name:
    label: First Name
    validation:
      my_rule_w_default_message
    value: 
      initial:
      final: '{{form.fields.first_name.value | default: form.fields.email.value}}'
  last_name:
    label: Last Name
    validation:
      presence: '{{form.fields.last_name.label}} must be provided'
  email:
    label: Email
  password:
    label: Password
  organization:
    label: Organization
    map: organization:name
    parent: User
    validation:
      presense: '{{form.fields.organization.label}} must be provided'
