---
name: user_registration
resource: User
fields:
  first_name:
    label: First Name
    validation:
    - rule: not_empty
  last_name:
    label: Last Name
    validation:
    - rule: presence
      error: '{{form.fields.last_name.label}} must be provided'
  email:
    label: Email
  password:
    label: Password
  organization:
    label: Organization
    map: models/organization:name
    validation:
    - rule: presense
      error: '{{form.fields.organization.label}} must be provided'
---
